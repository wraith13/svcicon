///////////////////////////////////////////////////////////////////////////////
//
//  ICON
//

APPLICATION_ICON        ICON DISCARDABLE "svcicon.ico"

DEFAULT_SERVICE_ICON    ICON DISCARDABLE "svc.ico"
//UAC_ICON                ICON DISCARDABLE "uac.ico"
MINI_UAC_ICON           ICON DISCARDABLE "miniuac.ico"

DO_START_ICON           ICON DISCARDABLE "start.ico"
DO_PAUSE_ICON           ICON DISCARDABLE "pause.ico"
DO_STOP_ICON            ICON DISCARDABLE "stop.ico"
DO_RESUME_ICON          ICON DISCARDABLE "resume.ico"
DO_RESTART_ICON         ICON DISCARDABLE "restart.ico"
//DISPLAY_PROPERTY_ICON   ICON DISCARDABLE "property.ico"
DO_CLOSE_ICON           ICON DISCARDABLE "close.ico"

START_PENDING_ICON      ICON DISCARDABLE "start_pending.ico"
RUNNING_ICON            ICON DISCARDABLE "running.ico"
PAUSE_PENDING_ICON      ICON DISCARDABLE "pause_pending.ico"
PAUSED_ICON             ICON DISCARDABLE "paused.ico"
CONTINUE_PENDING_ICON   ICON DISCARDABLE "continue_pending.ico"
STOP_PENDING_ICON       ICON DISCARDABLE "stop_pending.ico"
STOPPED_ICON            ICON DISCARDABLE "stopped.ico"


///////////////////////////////////////////////////////////////////////////////
//
//  MENU
//

NOTIFYICON_MENU MENU
{
    POPUP "notify icon"
    {
        MENUITEM "開始(&S)", DO_START_ICON
        MENUITEM "一時停止(&U)", DO_PAUSE_ICON
        MENUITEM "停止(&O)", DO_STOP_ICON
        MENUITEM "再開(&M)", DO_RESUME_ICON, GRAYED
        MENUITEM "再起動(&E)", DO_RESTART_ICON
//        MENUITEM SEPARATOR
//        MENUITEM "プロパティ(&R)", DISPLAY_PROPERTY_ICON
        MENUITEM SEPARATOR
        MENUITEM "終了(&X)", DO_CLOSE_ICON
    }
}

